<% if flash[:error] %>
  <ul>
  <% @event.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<h1>Create new event</h1>
<%= form_with model: @event do |form| %>
  Event name: <%= form.text_field :name %><br>
  Event Location: <%= form.text_field :location %><br>
  Event date: <%= form.date_field :date %><br>
  <%= form.submit "Create new event"%>
<% end %>
